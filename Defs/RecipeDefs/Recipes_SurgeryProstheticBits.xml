<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- The surgery recipes to install parts in a pawn -->

    <RecipeDef Abstract="True" Name="SurgeryFlesh">
        <effectWorking>Surgery</effectWorking>
        <soundWorking>Recipe_Surgery</soundWorking>
        <workSpeedStat>MedicalOperationSpeed</workSpeedStat>
        <workSkill>Medicine</workSkill>
        <workSkillLearnFactor>16</workSkillLearnFactor>
        <recipeUsers>
            <li>Human</li>
        </recipeUsers>
    </RecipeDef>

    <!-- Prosthetic finger -->

    <RecipeDef ParentName="SurgeryFlesh">
        <defName>InstallProstheticFinger</defName>
        <label>install prosthetic finger</label>
        <description>Install a prosthetic finger.</description>
        <workerClass>Recipe_InstallArtificialBodyPart</workerClass>
        <jobString>Installing prosthetic finger.</jobString>
        <workAmount>500</workAmount>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Medicine</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>ProstheticFinger</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Medicine</li>
            </categories>
            <thingDefs>
                <li>ProstheticFinger</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Finger</li>
        </appliedOnFixedBodyParts>
        <addsHediff>ProstheticFinger</addsHediff>
    </RecipeDef>

