<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- Prosthetic finger -->

    <ThingDef ParentName="BodyPartProstheticBase">
        <defName>ProstheticFinger</defName>
        <label>prosthetic finger</label>
        <description>A simple prosthetic finger in case of losing one of them. Slightly distinguishable from the real one.</description>
        <statBases>
            <MarketValue>60</MarketValue>
            <Mass>1</Mass>
        </statBases>
        <techHediffsTags>
            <li>Simple</li>
        </techHediffsTags>
        <costList>
            <Steel>10</Steel>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <recipeMaker>
            <workAmount>200</workAmount>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Smith</soundWorking>
            <recipeUsers>
                <li>TableMachining</li>
            </recipeUsers>
            <researchPrerequisite>Prosthetics</researchPrerequisite>
        </recipeMaker>
    </ThingDef>

    <!-- Prosthetic toe -->

    <ThingDef ParentName="BodyPartProstheticBase">
        <defName>ProstheticToe</defName>
        <label>prosthetic toe</label>
